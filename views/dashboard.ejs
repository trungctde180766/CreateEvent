<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Event Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/dashboard" class="logo">
                <i class="fas fa-calendar-alt"></i>
                Event Management System
            </a>
            <nav>
                <ul class="nav-menu">
                    <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li data-role="admin"><a href="/create-event"><i class="fas fa-plus-circle"></i> Create Event</a></li>
                    <li data-role="admin"><a href="/list-registrations"><i class="fas fa-users"></i> View All Registrations</a></li>
                    <li data-role="admin"><a href="/search-registrations"><i class="fas fa-search"></i> Search Registrations</a></li>
                    <li data-role="student"><a href="/register-event"><i class="fas fa-calendar-plus"></i> Register for Events</a></li>
                    <li data-role="student"><a href="/cancel-registration"><i class="fas fa-list-alt"></i> My Registrations</a></li>
                    <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="card">
            <div class="d-flex justify-between align-center">
                <div>
                    <h1><i class="fas fa-tachometer-alt text-primary"></i> Welcome to Event Management System</h1>
                    <p id="userInfo" class="text-muted">Loading user information...</p>
                </div>
                <div class="user-avatar">
                    <i class="fas fa-user-circle fa-3x text-primary"></i>
                </div>
            </div>
        </div>

        <div id="alertContainer"></div>

        <!-- Admin Quick Actions -->
        <div class="card" id="adminActionsSection" style="display: none;">
            <h2><i class="fas fa-cogs text-primary"></i> Admin Quick Actions</h2>
            <div class="quick-actions-grid">
                <a href="/create-event" class="quick-action-card">
                    <i class="fas fa-plus-circle fa-2x text-primary"></i>
                    <h3>Create New Event</h3>
                    <p>Add a new event to the system</p>
                </a>
                <a href="/list-registrations" class="quick-action-card">
                    <i class="fas fa-users fa-2x text-success"></i>
                    <h3>View Registrations</h3>
                    <p>See all event registrations</p>
                </a>
                <a href="/search-registrations" class="quick-action-card">
                    <i class="fas fa-search fa-2x text-info"></i>
                    <h3>Search Registrations</h3>
                    <p>Find registrations by date</p>
                </a>
            </div>
        </div>

        <!-- Student Quick Actions -->
        <div class="card" id="studentActionsSection" style="display: none;">
            <h2><i class="fas fa-user-graduate text-primary"></i> Student Quick Actions</h2>
            <div class="quick-actions-grid">
                <a href="/register-event" class="quick-action-card">
                    <i class="fas fa-calendar-plus fa-2x text-success"></i>
                    <h3>Register for Events</h3>
                    <p>Browse and register for events</p>
                </a>
                <a href="/cancel-registration" class="quick-action-card">
                    <i class="fas fa-list-alt fa-2x text-info"></i>
                    <h3>My Registrations</h3>
                    <p>View and manage your registrations</p>
                </a>
            </div>
        </div>

        <!-- Statistics Section -->
        <div class="card">
            <h2><i class="fas fa-chart-bar text-primary"></i> System Statistics</h2>
            <div id="statsContainer">
                <p class="text-center">Loading statistics...</p>
            </div>
        </div>

        <!-- Events Section -->
        <div class="card">
            <h2><i class="fas fa-calendar-alt text-primary"></i> Available Events</h2>
            <div id="eventsContainer">
                <p class="text-center">Loading events...</p>
            </div>
        </div>

        <!-- My Registrations Section (for students) -->
        <div class="card" id="myRegistrationsSection" style="display: none;">
            <h2><i class="fas fa-list-alt text-primary"></i> My Registrations</h2>
            <div id="myRegistrationsContainer">
                <p class="text-center">Loading your registrations...</p>
            </div>
        </div>
    </div>

    <!-- Modal for event detail -->
    <div id="eventDetailModal" class="modal" style="display:none;">
        <div class="modal-content">
            <span class="close" id="closeEventDetailModal">&times;</span>
            <h2 id="modalEventName"></h2>
            <p><strong>Start:</strong> <span id="modalEventStart"></span></p>
            <p><strong>End:</strong> <span id="modalEventEnd"></span></p>
            <p><strong>Location:</strong> <span id="modalEventLocation"></span></p>
            <p><strong>Description:</strong> <span id="modalEventDescription"></span></p>
            <p><strong>Capacity:</strong> <span id="modalEventCapacity"></span></p>
            <p><strong>Registered:</strong> <span id="modalEventRegistered"></span></p>
        </div>
    </div>

    <script src="/js/app.js"></script>
    <script>
        // Show/hide sections based on user role
        document.addEventListener('DOMContentLoaded', function() {
            if (currentUser) {
                if (currentUser.role === 'admin') {
                    document.getElementById('adminActionsSection').style.display = 'block';
                } else if (currentUser.role === 'student') {
                    document.getElementById('studentActionsSection').style.display = 'block';
                    document.getElementById('myRegistrationsSection').style.display = 'block';
                }
            }
        });
    </script>
</body>
</html> 